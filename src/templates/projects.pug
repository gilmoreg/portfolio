mixin project(repo)
  section.project(id=name)
    h2.title #{repo.name.toUpperCase()}
    .description= repo.description
    ul.topics
      each topic in repo.topics
        li= topic.toUpperCase()
    section(id=`${repo.name}-copy`)
      case repo.name
        when "condictor"
          include:markdown-it ../markdown/projects/condictor.md
        when "referendus"
          include:markdown-it ../markdown/projects/referendus.md
        when "legocollector"
          include:markdown-it ../markdown/projects/legocollector.md
        when "steam-battle"
          include:markdown-it ../markdown/projects/steam-battle.md
    section.button-row
      a(href=repo.siteUrl rel='noopener noreferrer' target='_blank' title=repo.name)
        i(class='fa fa-external-link' aria-hidden='true')
        span Live Site
      a(href=repo.repoUrl rel='noopener noreferrer' target='_blank' title=repo.name)
        i(class='fa fa-github' aria-hidden='true')
        span See the Code

section.onecolumn#projects
  h1 PROJECTS
  section.portfolio
    each repo in repos
      +project(repo)
